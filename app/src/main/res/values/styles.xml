<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EstilosEdtBtn" parent="Base.Widget.AppCompat.Button">
        <item name="android:width">285dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btn_dialogue" parent="AppTheme">
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="title_dialogue" parent="AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
